# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.js]
charset = utf-8
indent_style = space
indent_size = 4

# JSON files
[*.json]
charset = utf-8
indent_style = space
indent_size = 2

# HTML files
[*.html]
charset = utf-8
indent_style = space
indent_size = 2

# CSS files
[*.css]
charset = utf-8
indent_style = space
indent_size = 2

# Markdown files
[*.md]
charset = utf-8
trim_trailing_whitespace = false
